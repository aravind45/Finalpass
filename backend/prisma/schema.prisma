// SQLite Compatible Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String?
  name          String
  role          String    // Was Enum UserRole
  state         String
  
  // OAuth fields
  googleId      String?   @unique
  
  // Relationships
  estates       Estate[]
  sessions      Session[]
  auditLogs     AuditLog[]
  assetCommunications AssetCommunication[]
  notifications Notification[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Session {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tokenHash     String   @unique
  ipAddress     String
  userAgent     String   // Was @db.Text
  deviceId      String?
  
  country       String?
  region        String?
  city          String?
  
  createdAt     DateTime @default(now())
  lastActivity  DateTime @default(now())
  expiresAt     DateTime
  revokedAt     DateTime?
  
  @@index([userId])
  @@index([tokenHash])
  @@index([ipAddress])
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  action      String
  resource    String
  result      String
  
  ipAddress   String
  userAgent   String   // Was @db.Text
  sessionId   String?
  
  metadata    String?  // SQLite doesn't support Json native type, use String or supported mapping? Actually Prisma supports Json on SQLite via text.
  timestamp   DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([timestamp])
  @@index([resource])
}

model Estate {
  id                    String         @id @default(uuid())
  name                  String
  deceasedInfo          String         // stored as JSON string
  deceasedSSN_Encrypted String?
  deceasedState         String?
  type                  String?        // SIMPLE_PROBATE, INTESTATE, TRUST_BASED, SMALL_ESTATE
  status                String         @default("INITIATION") // Was Enum
  complexityScore       Int            @default(1)
  metadata              String?        // stored as JSON string
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  userId          String
  user            User           @relation(fields: [userId], references: [id])

  stakeholders    Stakeholder[]
  assets          Asset[]
  communications  Communication[]
  documents       Document[]
  notifications   Notification[]
  
  @@index([userId])
}

model Stakeholder {
  id          String          @id @default(uuid())
  estateId    String
  estate      Estate          @relation(fields: [estateId], references: [id])
  type        String          // Was Enum
  info        String          // stored as JSON string
  permissions String          // stored as JSON string
  active      Boolean         @default(true)
  createdAt   DateTime        @default(now())

  @@index([estateId])
}

model Asset {
  id           String      @id @default(uuid())
  estateId     String
  estate       Estate      @relation(fields: [estateId], references: [id])
  type         String
  institution  String
  status       String      @default("DISCOVERED") // Was Enum
  value        Decimal?    // SQLite supports Decimal via Prisma (mapped to String/Float)
  requirements String      // stored as JSON string
  metadata     String?     // stored as JSON string
  communications Communication[]
  assetCommunications AssetCommunication[]
  escalations  Escalation[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([estateId])
}

model Communication {
  id          String      @id @default(uuid())
  estateId    String
  estate      Estate      @relation(fields: [estateId], references: [id])
  channel     String      // Was Enum
  providerId  String?
  content     String      // Was @db.Text
  status      String
  auditTrail  String      // stored as JSON string
  metadata    String?     // stored as JSON string
  assetId     String?
  asset       Asset?      @relation(fields: [assetId], references: [id])
  createdAt   DateTime    @default(now())

  @@index([estateId])
  @@index([assetId])
}

// New: Asset Communication Tracking (Core Feature)
model AssetCommunication {
  id              String    @id @default(uuid())
  assetId         String
  asset           Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  date            DateTime  @default(now())
  type            String    // initial_contact, follow_up, escalation, response
  method          String    // email, phone, fax, mail, portal
  direction       String    // inbound, outbound
  
  subject         String?
  content         String    // Communication content/notes
  response        String?   // Response received
  responseDate    DateTime?
  
  nextActionDate  DateTime? // When to follow up
  nextActionType  String?   // What action to take next
  
  createdById     String
  createdBy       User      @relation(fields: [createdById], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([assetId])
  @@index([date])
  @@index([nextActionDate])
}

// New: Escalation Tracking
model Escalation {
  id              String    @id @default(uuid())
  assetId         String
  asset           Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  level           Int       // 1=follow-up, 2=supervisor, 3=regulatory
  triggeredDate   DateTime  @default(now())
  reason          String
  status          String    @default("pending") // pending, sent, resolved, cancelled
  
  templateUsed    String?
  sentDate        DateTime?
  resolvedDate    DateTime?
  resolution      String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([assetId])
  @@index([status])
  @@index([triggeredDate])
}

// New: Notifications
model Notification {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  estateId    String?
  estate      Estate?   @relation(fields: [estateId], references: [id], onDelete: Cascade)
  
  type        String    // escalation_due, response_received, document_needed, etc.
  title       String
  message     String
  
  read        Boolean   @default(false)
  actionUrl   String?
  
  createdAt   DateTime  @default(now())

  @@index([userId, read])
  @@index([createdAt])
}

model Document {
  id           String      @id @default(uuid())
  estateId     String
  estate       Estate      @relation(fields: [estateId], references: [id])
  type         String      // e.g., "DEATH_CERTIFICATE", "WILL", "OTHER"
  fileName     String
  filePath     String
  fileSize     Int
  mimeType     String
  status       String      @default("PENDING") // PENDING, EXTRACTED, VERIFIED
  extractedData String?    // JSON string of AI-extracted data
  uploadedAt   DateTime    @default(now())

  @@index([estateId])
}

// New: Fax Tracking
model Fax {
  id              String    @id @default(uuid())
  assetId         String
  
  // Fax details
  recipientName   String
  recipientFax    String
  senderName      String
  senderFax       String?
  
  // Document info
  documentType    String    // e.g., "fidelity_estate_packet", "death_certificate"
  documentName    String
  filePath        String
  pageCount       Int
  
  // Status tracking
  status          String    @default("pending") // pending, sending, sent, failed, delivered
  providerFaxId   String?   // PamFax fax ID
  providerStatus  String?   // Provider-specific status
  
  // Timestamps
  sentAt          DateTime?
  deliveredAt     DateTime?
  failedAt        DateTime?
  errorMessage    String?
  
  // Cost tracking
  cost            Decimal?
  
  // Metadata
  metadata        String?   // JSON string for additional data
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([assetId])
  @@index([status])
  @@index([createdAt])
}
