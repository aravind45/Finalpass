{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.ts",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "backend/forms/**",
                    "backend/prisma/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}